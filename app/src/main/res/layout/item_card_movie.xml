<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_padding_minor"
    app:cardBackgroundColor="@color/colorBackgroundItem"
    app:cardCornerRadius="@dimen/card_corner_radius">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:id="@+id/img_poster"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_movie_poster"
            android:layout_weight="0.3"
            android:background="@android:color/darker_gray"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:padding="@dimen/default_margin">

            <TextView
                android:id="@+id/lab_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/darker_gray" />

            <TextView

                android:id="@+id/lab_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_text_size" />

            <TextView
                android:id="@+id/lab_movie_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lab_movie_title"
                android:layout_marginTop="@dimen/default_margin"
                android:textColor="@android:color/white"
                android:textSize="@dimen/year_text_size"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>